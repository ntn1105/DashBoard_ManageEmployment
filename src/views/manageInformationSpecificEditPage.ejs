<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/css/reset.css">
    <link rel="stylesheet" href="/css/report.css">

    <link href="/css/informationEditPage.css" rel="stylesheet" />

    <script src="input.js" defer></script>

</head>

<body>

    <form action="/EditInformation" method="get">
        <div class="wrapper">

            <div class="form-group">
                <label for="id" class="headInfo">ID</label>
                <input type="text" id="id" name="PERSONAL_ID" value="<%= data.PERSONAL_ID %>" />
                <button onclick="findEmployee(event)">Find</button>
            </div>

            <div class="form-group">
                <label for="" class="headInfo">First Name</label>
                <input type="text" name="CURRENT_FIRST_NAME" value="<%= data.CURRENT_FIRST_NAME %>" />
            </div>

            <div class="form-group">
                <label for="" class="headInfo">Last Name</label>
                <input type="text" name="CURRENT_LAST_NAME" value="<%= data.CURRENT_LAST_NAME %>" />
            </div>

            <div class="form-group">
                <label for="" class="headInfo">Middle Name</label>
                <input type="text" name="CURRENT_MIDDLE_NAME" value="<%= data.CURRENT_MIDDLE_NAME %>" />
            </div>

            <div class="form-group">
                <label for="" class="headInfo">Birth Date</label>
                <input type="text" name="BIRTH_DATE"
                    value="<%= data.BIRTH_DATE ? data.BIRTH_DATE.toLocaleDateString() : ''%>" />
            </div>

            <div class="form-group">
                <label for="" class="headInfo">Social Security Number</label>
                <input type="text" name="SOCIAL_SECURITY_NUMBER" value="<%= data.SOCIAL_SECURITY_NUMBER %>" />
            </div>

            <div class="form-group">
                <label for="" class="headInfo">Driver's License</label>
                <input type="text" name="DRIVERS_LICENSE" value="<%= data.DRIVERS_LICENSE %>" />
            </div>

            <div class="form-group">
                <label for="" class="headInfo">Current Address 1</label>
                <input type="text" name="CURRENT_ADDRESS_1" value="<%= data.CURRENT_ADDRESS_1 %>" />
            </div>

            <div class="form-group">
                <label for="" class="headInfo">Current Address 2</label>
                <input type="text" name="CURRENT_ADDRESS_2" value="<%= data.CURRENT_ADDRESS_2 %>" />
            </div>

            <div class="form-group">
                <label for="" class="headInfo">Current City</label>
                <input type="text" name="CURRENT_CITY" value="<%= data.CURRENT_CITY %>" />
            </div>

            <div class="form-group">
                <label for="" class="headInfo">Current Country</label>
                <input type="text" name="CURRENT_COUNTRY" value="<%= data.CURRENT_COUNTRY %>" />
            </div>

            <div class="form-group">
                <label for="" class="headInfo">Current Zip</label>
                <input type="text" name="CURRENT_ZIP" value="<%= data.CURRENT_ZIP %>" />
            </div>

            <div class="form-group">
                <label for="" class="headInfo">Current Gender</label>
                <input type="text" name="CURRENT_GENDER" value="<%= data.CURRENT_GENDER %>" />
            </div>

            <div class="form-group">
                <label for="" class="headInfo">Current Phone Number</label>
                <input type="text" name="CURRENT_PHONE_NUMBER" value="<%= data.CURRENT_PHONE_NUMBER %>" />
            </div>

            <div class="form-group">
                <label for="" class="headInfo">Current Personal Email</label>
                <input type="text" name="CURRENT_PERSONAL_EMAIL" value="<%= data.CURRENT_PERSONAL_EMAIL %>" />
            </div>

            <div class="form-group">
                <label for="" class="headInfo">Current Marital Status</label>
                <input type="text" name="CURRENT_MARITAL_STATUS" value="<%= data.CURRENT_MARITAL_STATUS %>" />
            </div>

            <div class="form-group">
                <label for="" class="headInfo">Ethnicity</label>
                <input type="text" name="ETHNICITY" value="<%= data.ETHNICITY %>" />
            </div>

            <div class="form-group">
                <label for="" class="headInfo">Shareholder Status</label>
                <input type="text" name="SHAREHOLDER_STATUS" value="<%= data.SHAREHOLDER_STATUS %>" />
            </div>

            <div class="form-group">
                <label for="" class="headInfo">Benefit Plans ID</label>
                <input type="text" name="BENEFIT_PLANS_ID" value="<%= data.BENEFIT_PLANS_ID %>" />
                <button onclick="benefitPlanCheck(event)">Check</button>
            </div>

            <div id="shareholder">
                <div class="headInfo">
                    Plan Name:
                </div>
                <div class="detailInfo">
                    <%= data.PLAN_NAME %>
                </div>
            </div>

            <div id="deductable">
                <div class="headInfo">
                    Deductable:
                </div>
                <div class="detailInfo">
                    <%= data.DEDUCTABLE %>
                </div>
            </div>

            <div id="percentage-copay">
                <div class="headInfo">
                    Percentage Copay:
                </div>
                <div class="detailInfo">
                    <%= data.PERCENTAGE_COPAY %>
                </div>
            </div>


            <% if (data.EMPLOYMENT_CODE) { %>
                <div class="form-group">
                    <label for="" class="headInfo">Employment Code</label>
                    <input type="text" name="EMPLOYMENT_CODE" readonly value="<%= data.EMPLOYMENT_CODE %>" />
                </div>

                <div class="form-group">
                    <label for="" class="headInfo">Employment Status</label>
                    <input type="text" name="EMPLOYMENT_STATUS" value="<%= data.EMPLOYMENT_STATUS %>" />
                </div>

                <div class="form-group">
                    <label for="" class="headInfo">Hire Date For Working</label>
                    <input type="text" name="HIRE_DATE_FOR_WORKING"
                        value="<%= data.HIRE_DATE_FOR_WORKING ? data.HIRE_DATE_FOR_WORKING.toLocaleDateString() : '' %>" />
                </div>

                <div class="form-group">
                    <label for="" class="headInfo">Workers Comp Code</label>
                    <input type="text" name="WORKERS_COMP_CODE" value="<%= data.WORKERS_COMP_CODE %>" />
                </div>

                <div class="form-group">
                    <label for="" class="headInfo">Termination Date</label>
                    <input type="text" name="TERMINATION_DATE"
                        value="<%= data.TERMINATION_DATE ? data.TERMINATION_DATE : '' %>" />
                </div>

                <div class="form-group">
                    <label for="" class="headInfo">Rehire Date For Working</label>
                    <input type="text" name="REHIRE_DATE_FOR_WORKING"
                        value="<%= data.REHIRE_DATE_FOR_WORKING ? data.REHIRE_DATE_FOR_WORKING.toLocaleDateString() : '' %>" />
                </div>

                <div class="form-group">
                    <label for="" class="headInfo">Last Review Date</label>
                    <input type="text" name="LAST_REVIEW_DATE"
                        value="<%= data.LAST_REVIEW_DATE ? data.LAST_REVIEW_DATE.toLocaleDateString() : '' %>" />
                </div>

                <div class="form-group">
                    <label for="" class="headInfo">Number Days Requirement Of Working Per Month</label>
                    <input type="text" name="NUMBER_DAYS_REQUIREMENT_OF_WORKING_PER_MONTH"
                        value="<%= data.NUMBER_DAYS_REQUIREMENT_OF_WORKING_PER_MONTH %>" />
                </div>

                <div class="form-group">
                    <label for="" class="headInfo">Payrate ID</label>
                    <input type="text" name="idPay_Rates" value="<%= data['idPay Rates'] %>" />
                    <button onclick="payrateCheck(event)">Check</button>
                </div>
                <div id="shareholder">
                    <div class="headInfo">
                        Payrate Name:
                    </div>
                    <div class="detailInfo">
                        <%= data['Pay Rate Name'] %>
                    </div>
                </div>
                <div id="shareholder">
                    <div class="headInfo">
                        Value:
                    </div>
                    <div class="detailInfo">
                        <%= data['Value'] %>
                    </div>
                </div>
                <div id="shareholder">
                    <div class="headInfo">
                        Payrate:
                    </div>
                    <div class="detailInfo">
                        <%= data['Pay Rate'] %>
                    </div>
                </div>
                <div id="shareholder">
                    <div class="headInfo">
                        Paid to date:
                    </div>
                    <div class="detailInfo">
                        <%= data['Paid To Date'] %>
                    </div>
                </div>
                <div id="shareholder">
                    <div class="headInfo">
                        Pay Type:
                    </div>
                    <div class="detailInfo">
                        <%= data['Pay Type'] %>
                    </div>
                </div>
                <div id="shareholder">
                    <div class="headInfo">
                        Tax Percentage:
                    </div>
                    <div class="detailInfo">
                        <%= data['Tax Percentage'] %>
                    </div>
                </div>
                <div id="shareholder">
                    <div class="headInfo">
                        Pay Amount:
                    </div>
                    <div class="detailInfo">
                        <%= data['Tax Percentage'] %>
                    </div>
                </div>
                <div id="shareholder">
                    <div class="headInfo">
                        PT - Level C:
                    </div>
                    <div class="detailInfo">
                        <%= data['PT - Level C'] %>
                    </div>
                </div>
                <button onclick="deleteEmloyee(event)">Delete employee</button>
                <% } else { %>
                    <button onclick="addEmloyee(event)">Add employee</button>
                    <% } %>
                    
                        <button type="submit" class="submit">Submit</button>
                        <button onclick="findEmployeeBack(event)">Back</button>
    </form>

    <script>
        function findEmployee(event) {
            event.preventDefault();
            var personalId = document.getElementById('id').value;
            window.location.href = '/Information/Specific/Edit?PERSONAL_ID=' + encodeURIComponent(personalId);
        }
    </script>

    <script>
        function findEmployeeBack(event) {
            event.preventDefault();
            var personalId = document.getElementById('id').value;
            window.location.href = '/Information/Specific?PERSONAL_ID=' + encodeURIComponent(personalId);
        }
    </script>

    <script>
        function addEmloyee(event) {
            event.preventDefault();
            var formElements = document.getElementsByTagName("input");
            var url = '/AddNewEmployee?';
            for (var i = 0; i < formElements.length; i++) {
                var input = formElements[i];
                url += encodeURIComponent(input.name) + '=' + encodeURIComponent(input.value) + '&';
            }
            url = url.slice(0, -1);
            window.location.href = url;
        }
    </script>

    <script>
        function deleteEmloyee(event) {
            event.preventDefault();
            var formElements = document.getElementsByTagName("input");
            var url = '/DeleteEmployee?';
            for (var i = 0; i < formElements.length; i++) {
                var input = formElements[i];
                url += encodeURIComponent(input.name) + '=' + encodeURIComponent(input.value) + '&';
            }
            url = url.slice(0, -1);
            window.location.href = url;
        }
    </script>
</body>

</html>