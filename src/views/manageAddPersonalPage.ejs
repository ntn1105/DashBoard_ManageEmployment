<form action="/Information/Add#" method="get">
    <div class="wrapper">

        <div class="form-group">
            <label for="id">ID</label>
            <input type="text" id="id" name="PERSONAL_ID" readonly value="<%= PERSONAL_ID %>" />
        </div>

        <div class="form-group">
            <label for="">First Name</label>
            <input type="text" name="CURRENT_FIRST_NAME" value="<%= CURRENT_FIRST_NAME %>" />
        </div>

        <div class="form-group">
            <label for="">Last Name</label>
            <input type="text" name="CURRENT_LAST_NAME" value="<%= CURRENT_LAST_NAME %>" />
        </div>

        <div class="form-group">
            <label for="">Middle Name</label>
            <input type="text" name="CURRENT_MIDDLE_NAME" value="<%= CURRENT_MIDDLE_NAME %>" />
        </div>

        <div class="form-group">
            <label for="">Birth Date</label>
            <input type="text" name="BIRTH_DATE"
                value="<%= BIRTH_DATE ? BIRTH_DATE: ''%>" />
        </div>

        <div class="form-group">
            <label for="">Social Security Number</label>
            <input type="text" name="SOCIAL_SECURITY_NUMBER" value="<%= SOCIAL_SECURITY_NUMBER %>" />
        </div>

        <div class="form-group">
            <label for="">Driver's License</label>
            <input type="text" name="DRIVERS_LICENSE" value="<%= DRIVERS_LICENSE %>" />
        </div>

        <div class="form-group">
            <label for="">Current Address 1</label>
            <input type="text" name="CURRENT_ADDRESS_1" value="<%= CURRENT_ADDRESS_1 %>" />
        </div>

        <div class="form-group">
            <label for="">Current Address 2</label>
            <input type="text" name="CURRENT_ADDRESS_2" value="<%= CURRENT_ADDRESS_2 %>" />
        </div>

        <div class="form-group">
            <label for="">Current City</label>
            <input type="text" name="CURRENT_CITY" value="<%= CURRENT_CITY %>" />
        </div>

        <div class="form-group">
            <label for="">Current Country</label>
            <input type="text" name="CURRENT_COUNTRY" value="<%= CURRENT_COUNTRY %>" />
        </div>

        <div class="form-group">
            <label for="">Current Zip</label>
            <input type="text" name="CURRENT_ZIP" value="<%= CURRENT_ZIP %>" />
        </div>

        <div class="form-group">
            <label for="">Current Gender</label>
            <input type="text" name="CURRENT_GENDER" value="<%= CURRENT_GENDER %>" />
        </div>

        <div class="form-group">
            <label for="">Current Phone Number</label>
            <input type="text" name="CURRENT_PHONE_NUMBER" value="<%= CURRENT_PHONE_NUMBER %>" />
        </div>

        <div class="form-group">
            <label for="">Current Personal Email</label>
            <input type="text" name="CURRENT_PERSONAL_EMAIL" value="<%= CURRENT_PERSONAL_EMAIL %>" />
        </div>

        <div class="form-group">
            <label for="">Current Marital Status</label>
            <input type="text" name="CURRENT_MARITAL_STATUS" value="<%= CURRENT_MARITAL_STATUS %>" />
        </div>

        <div class="form-group">
            <label for="">Ethnicity</label>
            <input type="text" name="ETHNICITY" value="<%= ETHNICITY %>" />
        </div>

        <div class="form-group">
            <label for="">Shareholder Status</label>
            <input type="text" name="SHAREHOLDER_STATUS" value="<%= SHAREHOLDER_STATUS %>" />
        </div>

        <div class="form-group">
            <label for="">Benefit Plans ID</label>
            <input type="text" name="BENEFIT_PLANS_ID" value="<%= BENEFIT_PLANS_ID %>" />
            <button onclick="benefitPlanCheck(event)">Check</button>
        </div>

        <p>
            Plan Name: <%= PLAN_NAME %>
        </p>
        <p>
            Deductable: <%= DEDUCTABLE %>
        </p>
        <p>
            Percentage Copay: <%= PERCENTAGE_COPAY %>
        </p>

    </div>
    <button type="submit" class="submit">Submit</button>
</form>

<script>
    function benefitPlanCheck(event) {
        event.preventDefault();
        var formElements = document.getElementsByTagName("input");
        var url = '/Information/Add?';
        for(var i = 0 ; i < formElements.length ; i++){
            var input = formElements[i];
            url += encodeURIComponent(input.name) + '=' + encodeURIComponent(input.value) + '&';
        }
        url = url.slice(0, -1);
        window.location.href = url;
    }
</script>