<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dashboard</title>
  <link rel="stylesheet" href="/css/reset.css">
  <link rel="stylesheet" href="/css/report.css">

  <!-- Embed font -->
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link
    href="https://fonts.googleapis.com/css2?family=Advent+Pro:ital,wght@0,100..900;1,100..900&family=Montserrat:ital,wght@0,600;1,600&family=Poppins:wght@400;500;600;700&display=swap"
    rel="stylesheet" />

  <!-- Embed icon -->
  <script defer src="https://unpkg.com/boxicons@2.1.4/dist/boxicons.js"></script>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  <link href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css" rel="stylesheet" />
</head>


<body>

    <% if(role.permission.includes("role_permission")) { %>
    
        <h1 class="mb-4">Phân quyền</h1>
    
        <div data-records="<%= JSON.stringify(records) %>"></div>
        <div class="text-right">
            <button type="submit" class="btn btn-primary mb-3" id="button-submit">Cập nhật</button>
        </div>
    
        <table class="table table-hover table-sm" id="table-permissions">
            <thead>
                <tr>
                    <th>Tính năng</th>
                    <% records.forEach(item => { %>
                        <th class="text-center"><%= item.title %></th>
                    <% }); %>
                </tr>
            </thead>
            <tbody>
                <tr data-name="id">
                    <td></td>
                    <% records.forEach(item => { %>
                        <td class="text-center d-none"><input type="text" value="<%= item.id %>"></td>
                    <% }); %>
                </tr>
                <tr>
                    <td colspan="4"><b>Nhóm quyền</b></td>
                </tr>

                <tr data-name="role_view">
                    <td>Xem</td>
                    <% records.forEach(function(item) { %>
                        <td class="text-center">
                            <input type="checkbox">
                        </td>
                    <% }); %>
                </tr>
                
                <tr data-name="role_create">
                    <td>Thêm mới</td>
                    <% records.forEach(function(item) { %>
                        <td class="text-center">
                            <input type="checkbox">
                        </td>
                    <% }); %>
                </tr>
                
                <tr data-name="role_edit">
                    <td>Chỉnh sửa</td>
                    <% records.forEach(function(item) { %>
                        <td class="text-center">
                            <input type="checkbox">
                        </td>
                    <% }); %>
                </tr>
                
                <tr data-name="role_delete">
                    <td>Xóa</td>
                    <% records.forEach(function(item) { %>
                        <td class="text-center">
                            <input type="checkbox">
                        </td>
                    <% }); %>
                </tr>

                <tr data-name="role_permission">
                    <td>Phân quyền</td>
                    <% records.forEach(function(item) { %>
                        <td class="text-center">
                            <input type="checkbox">
                        </td>
                    <% }); %>
                </tr>

                <tr>
                    <td colspan="4"><b>Tài khoản</b></td>
                </tr>

                <tr data-name="account_view">
                    <td>Xem</td>
                    <% records.forEach(function(item) { %>
                        <td class="text-center">
                            <input type="checkbox">
                        </td>
                    <% }); %>
                </tr>
                
                <tr data-name="account_create">
                    <td>Thêm mới</td>
                    <% records.forEach(function(item) { %>
                        <td class="text-center">
                            <input type="checkbox">
                        </td>
                    <% }); %>
                </tr>
                
                <tr data-name="account_edit">
                    <td>Chỉnh sửa</td>
                    <% records.forEach(function(item) { %>
                        <td class="text-center">
                            <input type="checkbox">
                        </td>
                    <% }); %>
                </tr>
                
                <tr data-name="account_delete">
                    <td>Xóa</td>
                    <% records.forEach(function(item) { %>
                        <td class="text-center">
                            <input type="checkbox">
                        </td>
                    <% }); %>
                </tr>
                
                <!-- Rest of the permissions -->
            </tbody>
        </table>
    
        <form id="form-change-permissions" action="<%= `/Permissions?_method=PATCH` %>" method="POST">
            <div class="form-group">
                <input type="text" class="form-control d-none" name="permissions">
            </div>
        </form>
    
     
    
      
        
        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
        <script src="/js/accounts.js"></script>
    <% } %>
</body>